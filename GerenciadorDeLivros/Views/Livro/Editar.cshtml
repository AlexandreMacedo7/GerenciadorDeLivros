@{
    ViewData["Title"] = "Editar Livro";
}
<div class="text-center">
    <h1 class="display-4">Editar Livro</h1>
</div>

<form>
    <div class="mb-3">
        <label for="titulo">Título</label>
        <input type="text" class="form-control" placeholder="Digite o Título do livro">
    </div>
    <div class="mb-3">
        <label for="autor">Autor</label>
        <input type="text" class="form-control" placeholder="Digite o nome do autor do livro">
    </div>
    <div class="mb-3">
        <label for="genero">Gênero</label>
        <input type="text" class="form-control" placeholder="Digite o gênero do livro">
    </div>

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Livro" asp-action="Index">Voltar</a>
</form>