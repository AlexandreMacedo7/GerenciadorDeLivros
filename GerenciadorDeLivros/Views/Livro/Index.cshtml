@{
    ViewData["Title"] = "Listagem de livros";
}
<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" rule="button" asp-controller="Livro" asp-action="Criar">Adicionar novo Livro</a>
    </div> 
    <br />
    <h1 class="display-4">Listagem de livros</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Titulo</th>
                <th scope="col">Autor</th>
                <th scope="col">Genero</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>mdo</td>
                <td>
                    <div class="btn-group" role="group">
                        <a rule="button" class="btn btn-primary">Editar</a>
                        <a rule="button" class="btn btn-danger">Apagar</a>
                    </div>
                </td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>Jame</td>
                <td>
                    <div class="btn-group" role="group">
                        <a rule="button" class="btn btn-primary">Editar</a>
                        <a rule="button" class="btn btn-danger">Apagar</a>
                    </div>
                </td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Larry the Bird</td>
                <td>twitter</td>
                <td>storie</td>
                <td>
                    <div class="btn-group" role="group">
                        <a rule="button" class="btn btn-primary">Editar</a>
                        <a rule="button" class="btn btn-danger">Apagar</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
